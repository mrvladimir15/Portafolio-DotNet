@{
    ViewData["Title"] = "Contact";
}

<h1>Formulario de contacto</h1>

<form asp-controller="Home" asp-action="Contact">
    <div class="mb-3">
        <label for="nombre" class="form-label">Nombre</label>
        <input type="text" class="form-control" id="nombre" name="nombre" placeholder="John Doe" />
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input class="form-control" id="email" name="email" placeholder="johndoe@gmail.com" />
    </div>
    <div class="mb-3">
        <label for="mensaje" class="form-label">Mensaje</label>
        <textarea class="form-control" id="mensaje" name="message" placeholder="Insert your text here..." rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>